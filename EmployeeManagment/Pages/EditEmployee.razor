@page "/editemployee/{id}"
@inherits EditEmployeeBase

<h3>EditEmployee</h3>

<EditForm Model="Employee">
    <h3>Edit Employee</h3>
    <hr />
    <div class="form-group row">
       <label for="firstName" class="col-sm-2 col-form-label"> First Name</label>
       <div class="col-sm-10">
           <InputText @bind-Value="Employee.FirstName" id="firstName" class="form-control" placeholder="First Name"></InputText>
       </div> 
    </div>
    <div class="form-group row">
        <label for="lastName" class="col-sm-2 col-form-label"> Last Name</label>
        <div class="col-sm-10">
            <InputText @bind-Value="Employee.LastName" id="lastName" class="form-control" placeholder="Last Name"></InputText>
        </div>
    </div>
    <div class="form-group row">
        <label for="email" class="col-sm-2 col-form-label">Email</label>
        <div class="col-sm-10">
            <InputText @bind-Value="Employee.Email" id="email" class="form-control" placeholder="Email"></InputText>
        </div>
    </div>
    <div class="form-group row">
        <label for="department" class="col-sm-2 col-form-label">Department</label>
        <div class="col-sm-10">
            <InputSelect @bind-Value="Employee.DepartmentId" id="department" class="form-control" placeholder="Email">
               @if(Departments!=null){
                foreach(var item in Departments)
                {
                    <option value="@item.DepartmentId">@item.DepartmentName</option>
                }
               }
            </InputSelect>
        </div>
    </div>
</EditForm>